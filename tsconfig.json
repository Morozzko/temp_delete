{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable", "ES6",],
    "strict": true,
    "target": "es5",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "./dist",
    "baseUrl": ".",
     "declaration": true,
     "declarationDir": "types",
     "sourceMap": true,
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "jest",
  ]
}
